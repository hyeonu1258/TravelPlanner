<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="inu.travel.Activity.SearchPlaceActivity"
        tools:showIn="@layout/app_bar_main">

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></RelativeLayout>

        <Button
            android:id="@+id/btnMT"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="숙박" />

        <Button
            android:id="@+id/btnTour"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/btnMT"
            android:text="관광지" />

        <Button
            android:id="@+id/btnEat"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/btnTour"
            android:text="맛집" />

        //

        <Button
            android:id="@+id/btnAddPlace"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/map_view"
            android:text="장소추가"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnRemovePlace"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/map_view"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btnAddPlace"
            android:text="장소삭제"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnViewDetail"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/map_view"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btnRemovePlace"
            android:text="상세보기"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/map_view"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btnViewDetail"
            android:text="완료"
            android:textSize="15dp" />
    </RelativeLayout>
</LinearLayout>